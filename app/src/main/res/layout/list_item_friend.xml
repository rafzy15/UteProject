<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkbox_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
         />

    <TextView
        android:id="@+id/expandedFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/checkbox_item"
        android:layout_alignBottom="@+id/checkbox_item"
        android:layout_toRightOf="@+id/checkbox_item"
        android:textSize="17dip" />
    <TextView
        android:id="@+id/expandedFriendNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expandedFriendName"
        android:layout_alignBottom="@+id/expandedFriendName"
        android:layout_toRightOf="@+id/expandedFriendName"
        android:textSize="17dip" />

</RelativeLayout>